<%= partial :navbar %>
<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4 notHome">
    <h1>List a Space</h1>
    <div class="panel panel-default text-center">
      <div class="panel-body">
        <form action="/spaces/new" method="post">
          <div class="form-group">
            <label for="spaceName">Name</label>
            <input class="form-control" id="spaceName" name="name" type="text" placeholder="Name" required>
          </div>
          <div class="form-group">
            <label for="spaceDescription">Description</label>
            <textarea class="form-control" id="spaceDescription" name="description" type="text" rows="4" cols="80" placeholder="Description" required></textarea>
          </div>
          <div class="form-group">
            <label for="spacePrice">Price</label>
            <input class="form-control" id="spacePrice" name="price" type="number" placeholder="0.00" step="0.01" pattern="^\d{1,4}(\.\d{1,2})?$" required>
          </div>
          <div class="form-group">
            <label for="fromDate">Available from</label>
            <input class="form-control" id="fromDate" name="from_date" type="date" required>
          </div>
          <div class="form-group">
            <label for="fromDate">Available to</label>
            <input class="form-control" id="toDate" name="to_date" type="date" required>
          </div>
          <button class="form-control btn btn-login" id="listMySpace" type="submit">List my space</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-sm-4"></div>
</div>
